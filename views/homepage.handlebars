<!-- Loop over each object in the projects array -->
<h1>logged in: {{logged_in}}</h1>
{{#each dogs as |dog|}}
  <div class='row mb-4 project'>
    <div class='col-md-5'>
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        <span for='img' aria-label='red-heart'></span>
        <a href='/dog/{{dog.id}}'>{{dog.name}}</a>
      </h2>
      <p>
        
        <!-- Pass needed_funding value to the helper function -->
        <span class='dollar-amount'>{{format_amount
            project.needed_funding
          }}</span>
        needed!
      </p>
    </div>
    <div class='col-md-7'>
      <p>
        {{project.description}}
      </p>
    </div>
  </div>
{{/each}}